@model URLShortener.Models.AboutContent

@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <h1>About Our Project</h1>
    <hr />

    <div class="card p-4 bg-light">
        <p class="lead" style="white-space: pre-wrap;">@Model.Description</p>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-5">
            <h3>Edit Description <span class="badge bg-danger">Admin Only</span></h3>
            <form asp-action="UpdateAbout" method="post">
                <div class="form-group mb-3">
                    <textarea name="description" class="form-control" rows="5">@Model.Description</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    }
</div>